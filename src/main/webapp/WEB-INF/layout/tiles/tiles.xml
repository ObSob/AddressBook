<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>

    <definition name="base" template="/WEB-INF/layout/tiles/base.jsp">
        <put-attribute name="stylesheet" value="/WEB-INF/layout/tiles/static.jsp"/>
        <put-attribute name="header" value="/WEB-INF/layout/tiles/header.jsp"/>
        <put-attribute name="footer" value="/WEB-INF/layout/tiles/footer.jsp"/>
        <put-attribute name="menu" value="/WEB-INF/layout/tiles/menu.jsp"/>
    </definition>

    <!-- views -->
    <definition name="welcomePage" extends="base">
        <put-attribute name="body" value="/WEB-INF/views/welcome.jsp"/>
    </definition>

    <definition name="userPage" extends="base">
        <put-attribute name="body" value="/WEB-INF/views/user.jsp"/>
    </definition>

    <definition name="addPage" extends="base">
        <put-attribute name="body" value="/WEB-INF/views/add.jsp"/>
    </definition>
</tiles-definitions>
